[Unit]
Description=TicketBroker Flask Application
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/path/to/TicketBroker
Environment=PATH=/path/to/TicketBroker/venv_new/bin
Environment=FLASK_APP=run.py
Environment=FLASK_ENV=production
ExecStart=/path/to/TicketBroker/venv_new/bin/gunicorn -c gunicorn.conf.py run:app
ExecReload=/bin/kill -s HUP $MAINPID
Restart=always

[Install]
WantedBy=multi-user.target
